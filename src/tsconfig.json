{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",

		"noImplicitAny": false,
		"removeComments": false,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"noFallthroughCasesInSwitch": false,
		"noImplicitReturns": true,

		"preserveConstEnums": true,
		"strictNullChecks": true,
		"noUnusedParameters": false
	},
	"exclude": [
		"node_modules",
		"testdata/"
	]
}
